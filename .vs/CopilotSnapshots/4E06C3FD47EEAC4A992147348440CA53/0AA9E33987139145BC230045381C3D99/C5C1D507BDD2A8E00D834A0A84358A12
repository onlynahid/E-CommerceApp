using AYYUAZ.APP.Domain.Common;
using Microsoft.AspNetCore.Identity;
using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.ComponentModel.DataAnnotations;

namespace AYYUAZ.APP.Domain.Entities
{
    public class User : IdentityUser
    {
        [StringLength(100)]
        public string? FullName { get; set; }
        
        /// <summary>
        /// Indicates if the user has admin privileges
        /// </summary>
        public bool IsAdmin { get; set; } = false;
        
        /// <summary>
        /// Date when the user account was created
        /// </summary>
        public DateTime CreatedAt { get; set; } = DateTime.UtcNow;
        
        /// <summary>
        /// Custom Username property for compatibility with existing code
        /// This maps to the inherited UserName property from IdentityUser
        /// </summary>
        public string Username
        {
            get => UserName ?? string.Empty;
            set => UserName = value;
        }
    }
}
